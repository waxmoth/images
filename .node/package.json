{
  "name": "image-functions",
  "description": "The image functions created by Golang",
  "version": "1.2.0",
  "scripts": {
    "dev": "make run-dev",
    "start": ".node/node_modules/.bin/serverless offline start --useDocker --stage=dev",
    "watch": "npm-watch"
  },
  "devDependencies": {
    "npm-watch": "^0.11.0",
    "serverless": "^3.33.0",
    "serverless-offline": "^12.0.4"
  },
  "watch": {
    "dev": {
      "patterns": [
        "../src"
      ],
      "extensions": "go,yml",
      "quiet": false,
      "silent": true,
      "delay": 1000
    }
  }
}
