{
  "name": "image-functions",
  "description": "The image functions created by Golang",
  "version": "1.2.0",
  "scripts": {
    "dev": "make run-dev",
    "start": ".node/node_modules/.bin/serverless offline start --useDocker --stage=dev",
    "watch": "nodemon"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "serverless": "^4.1.22",
    "serverless-offline": "^14.1.1"
  },
  "nodemonConfig": {
    "delay": 2000,
    "exec": "make run-dev",
    "ext": "go,yml",
    "ignore": [
      "node_modules",
      ".git"
    ],
    "watch": [
      "../src"
    ]
  }
}
