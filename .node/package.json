{
  "name": "image-functions",
  "description": "The image functions created by Golang",
  "version": "1.2.0",
  "scripts": {
    "dev": "make run-dev",
    "start": ".node/node_modules/.bin/serverless offline start --useDocker --stage=dev",
    "watch": "nodemon --exec \"make run-dev\""
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "serverless": "^3.34.0",
    "serverless-offline": "^13.1.2"
  },
  "nodemonConfig": {
    "exec": "make run-dev",
    "watch": [
      "../src"
    ],
    "ignore": [
      "node_modules",
      ".git"
    ],
    "ext": "go,yml",
    "delay": 2000
  }
}
